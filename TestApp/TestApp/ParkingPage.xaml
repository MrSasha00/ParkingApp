<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.ParkingPage">

	<StackLayout>
		<StackLayout>
			<Label Text="{Binding Path=DetModel.Address}" FontSize="Medium" />
			<Label Text="{Binding Path=DetModel.TotalParkingSpaces}" FontSize="Medium" />
			<Label Text="{Binding Path=DetModel.FreeParkingSpaces}" FontSize="Medium" />
			<Label Text="{Binding Path=DetModel.CoordX}" FontSize="Medium" />
			<Label Text="{Binding Path=DetModel.CoordY}" FontSize="Medium" />
			<Image x:Name="backgroundImage" Source="{Binding Path=DetModel.Camera}" AbsoluteLayout.LayoutBounds="0,0,1,1"   AbsoluteLayout.LayoutFlags="All" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill"/>
		</StackLayout>
	</StackLayout>
</ContentPage>