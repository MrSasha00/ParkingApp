<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkingApp.Pages.MainPage" Title="Список парковок">
	<StackLayout>
		<ListView x:Name="ParkingList"
			SelectedItem="{Binding SelectedParking, Mode=TwoWay}"
			HasUnevenRows="True"
			ItemsSource="{Binding ParkingPlaces}"
			IsPullToRefreshEnabled="True"
			RefreshCommand="{Binding RefreshCommand}"
			IsRefreshing="{Binding IsRefreshing}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout>
								<Label Text="{Binding Address}" FontSize="18" Padding="3" />
								<Label Padding="3">
									<Label.FormattedText>
										<FormattedString>
											<Span Text="Всего мест: "></Span>
											<Span Text="{Binding TotalParkingSpaces}"></Span>
										</FormattedString>
									</Label.FormattedText>
								</Label>
								<Label Padding="3">
									<Label.FormattedText>
										<FormattedString>
											<Span Text="Мест свободно: "></Span>
											<Span Text="{Binding FreeParkingSpaces}"></Span>
										</FormattedString>
									</Label.FormattedText>
								</Label>
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>